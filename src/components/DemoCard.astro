---
// src/components/DemoCard.astro
const { title, description, videoId, linkUrl, imgSrc } = Astro.props;
---
<div class="demo-card">
  <div class="media-container">
    {videoId ? (
      <div class="video-embed">
        <iframe 
          src={`https://www.youtube.com/embed/${videoId}?rel=0`}
          title={`YouTube video player for ${title}`}
          frameborder="0" 
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
          allowfullscreen>
        </iframe>
      </div>
    ) : (
      <a href={linkUrl} target="_blank" rel="noopener noreferrer" class="image-link">
        <img src={imgSrc} alt={`Screenshot of the ${title}`} />
      </a>
    )}
  </div>
  <div class="text-content">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style>
  .demo-card {
    background-color: var(--color-white);
    border-radius: 12px;
    border: 1px solid var(--color-border);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05);
  }
  .media-container {
    background-color: #000;
  }
  .video-embed {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
  }
  .video-embed iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .image-link {
    display: block;
    line-height: 0;
  }
  .image-link img {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    object-position: top;
    transition: transform 0.3s ease;
  }
  .image-link:hover img {
    transform: scale(1.03);
  }
  .text-content {
    padding: 1.5rem;
  }
  .text-content h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .text-content p {
    color: var(--color-text-muted);
    line-height: 1.6;
  }
</style>
