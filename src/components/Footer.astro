<style>
  .site-footer {
    background-color: var(--color-background); /* Switched to light gray for subtle contrast */
    border-top: 1px solid var(--color-border);
    padding: 2.5rem 0;
    margin-top: 4rem;
    font-size: 0.9rem;
  }
  .container {
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2rem;
    
    /* --- NEW: Added flexbox for layout --- */
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap; /* Allows stacking on mobile */
    gap: 1rem;
  }
  .copyright {
    color: var(--color-text-muted);
    line-height: 1.5;
  }
  .footer-nav a {
    color: var(--color-text);
    font-weight: 700;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  .footer-nav a:hover {
    color: var(--color-primary);
  }
  
  /* --- NEW: Stack layout on small screens --- */
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
