<style>
  .site-footer {
    background-color: var(--color-background);
    border-top: 1px solid var(--color-border);
    padding: 2.5rem 0;
    margin-top: 4rem;
    font-size: 0.9rem;
  }
  .container {
    max-width: 1100px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
  .copyright {
    color: var(--color-text-muted);
    line-height: 1.5;
    flex-grow: 1;
  }
  .footer-nav {
    display: flex;
    gap: 1.5rem;
    flex-shrink: 0;
  }
  .footer-nav a {
    color: var(--color-text);
    font-weight: 700;
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
    
    /* --- THIS IS THE FIX --- */
    /* Allows long text strings to break to prevent overflow */
    overflow-wrap: break-word;
    white-space: normal; /* Allows the text to wrap */
  }
  .footer-nav a:hover {
    color: var(--color-primary);
  }
  
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }
    .footer-nav {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
