---
import Layout from '../layouts/Layout.astro';
import InteractiveTimeline from '../components/InteractiveTimeline.astro';
import ShareButtons from '../components/ShareButtons.astro';

// Static content for SEO (duplicated from InteractiveTimeline but necessary)
const achievements = {
  funding: [
    { date: 'August 2025', title: 'Secured NHS BNSSG ICB grant', text: 'Secured £1,500 grant for PPIE activities from NHS Bristol, North Somerset and South Gloucestershire Integrated Care Board' },
    { date: 'June 2025', title: 'Secured CATE Student Internship', text: "Secured '2024/25 CATE UWE Student Internship' grant for Louis Robinson, recruited during a presentation, to support prototype development" },
    { date: 'January 2025', title: 'Accepted as EPS Postgraduate Member', text: 'Granted postgraduate membership with Experimental Psychology Society (EPS)' },
    { date: 'December 2024', title: 'Secured CATE Public Engagement Fund', text: "Awarded £3,000 from UWE Bristol's '2024-25 CATE Public/Community Engagement Fund' for PPIE activities" },
    { date: 'December 2024', title: 'Accepted as IHT Fellow', text: 'Welcomed into Innovate Healthier Together community (BNSSG NHS)' },
    { date: 'May-Sep 2024', title: 'Sponsored Research Visit', text: 'Research visit at University of Bristol on affective computing, supervised by Zahraa Abdallah' },
    { date: 'June 2024', title: 'Best Student Poster Award', text: "Awarded 'Best Student Poster' at Second Workshop on Multimodal AI (Sheffield/Alan Turing Institute)" },
    { date: 'April 2023', title: 'PhD Scholarship', text: 'Full PhD scholarship at UWE Bristol including £3,000 project expenses' }
  ],
  publications: [
    { date: 'November 2025', title: 'BCS HCI 2025 Paper', text: "Position paper on co-design methodology at 'Co-Designing Human-Centered AI Technologies for Health and Wellbeing' Workshop" },
    { date: 'September 2025', title: 'Multimodal AI Workshop Poster', text: 'Technical poster on multimodal contextualised affective computing for longitudinal data' },
    { date: 'February 2025', title: 'HEALTHINF 2025', text: "Published 'Affective Computing in Anxiety Disorders: A Rapid Literature Review' at 18th International Joint Conference" },
    { date: 'July 2024', title: 'NIHR & UoB Presentation', text: "Presented at 'Researcher coffee catch-up: Digital solutions for anxiety disorders' (NIHR ARC West)" },
    { date: 'May 2024', title: 'AI in Precision Psychiatry', text: 'Presented at Elizabeth Blackwell Institute and Bristol Neuroscience Network workshop' },
    { date: 'June 2024', title: 'DMHW 2024 Conference', text: 'Published 2 abstracts at Second International Digital Mental Health Conference (Ulster University)' },
    { date: 'November 2023', title: 'University of Aberdeen', text: "Invited speaker: 'Emotion recognition for early detection of neurodegenerative diseases' (BMVC 2023)" },
    { date: 'June 2023', title: 'Publishing Collaboration', text: 'Paper on transformer architecture for ECG emotion recognition with Dr Vincenzo Dentamaro' }
  ],
  codesign: [
    { date: 'July 2025', title: 'Phase V Planned', text: 'Ethical approval obtained for Implementation phase - lab-controlled data collection sessions' },
    { date: 'September 2025', title: 'Phase IV Completed', text: 'Evaluative phase: 25 participants, feedback on UI/UX via focus groups and demos' },
    { date: 'May 2025', title: 'Phase III Completed', text: 'Prototype phase: 19 participants, UI/UX ideas via focus groups and mock-ups' },
    { date: 'April 2025', title: 'Phase II Completed', text: 'Generative phase: 20 participants, core features defined via focus groups and storyboards' },
    { date: 'February 2025', title: 'Phase I Completed', text: 'Pre-design phase: 24 participants exploring stakeholder problems and needs' },
    { date: 'July 2024', title: 'Phase 0 Completed', text: 'Recruiting Material Consultations: 12 participants via focus groups and surveys' }
  ]
};
---

<Layout
  title="Achievements & Milestones - MEMoPAD Project"
  description="£4,500+ secured in funding, 87+ co-design participants, published at HEALTHINF 2025, Best Poster Award winner. Track MEMoPAD's research milestones and impact."
>
  <section class="hero-banner">
    <img src="/achievements-hero-banner.jpg" alt="MEMoPAD project achievements desk with research charts, graphs, and funding milestones" />
  </section>

  <section class="container">
    <div class="achievements-header">
      <h1>Achievements & Milestones</h1>
      <small class="click-prompt">(Click or swipe the 3 categories below to explore the different timelines)</small>
    </div>

    <!-- Interactive timeline for users -->
    <InteractiveTimeline />
    
    <!-- Static content for search engines (hidden from view) -->
    <div class="seo-content" aria-hidden="true">
      <section id="funding-awards">
        <h2>Funding & Awards</h2>
        <ul>
          {achievements.funding.map(item => (
            <li>
              <strong>{item.date}: {item.title}</strong> - {item.text}
            </li>
          ))}
        </ul>
      </section>

      <section id="publications-presentations">
        <h2>Publications & Presentations</h2>
        <ul>
          {achievements.publications.map(item => (
            <li>
              <strong>{item.date}: {item.title}</strong> - {item.text}
            </li>
          ))}
        </ul>
      </section>

      <section id="co-design-milestones">
        <h2>Co-Design & Project Milestones</h2>
        <ul>
          {achievements.codesign.map(item => (
            <li>
              <strong>{item.date}: {item.title}</strong> - {item.text}
            </li>
          ))}
        </ul>
      </section>
    </div>

    <section class="cta-section">
      <div class="cta-box">
        <h2>Interested in what's next?</h2>
        <p>These milestones represent years of research and collaboration. If you're exploring partnerships, funding opportunities, or ways to bring this work into your organization, let's connect.</p>
        <a href="/collaborate/" class="button">Explore Collaboration Opportunities</a>
      </div>
    </section>
    
    <ShareButtons pageTitle="MEMoPAD Project Achievements & Milestones" />
  </section>
</Layout>

<style>
  .hero-banner {
    width: 100%;
    height: 350px;
    margin-bottom: 0;
  }
  .hero-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .achievements-header {
    text-align: center;
    padding-top: 4rem;
    margin-bottom: 2rem;
  }
  .achievements-header h1 {
    font-size: 3rem;
  }

  /* Hide static content from visual display, but accessible to crawlers */
  .seo-content {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .seo-content h2 {
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
  }

  .seo-content ul {
    list-style: disc;
    padding-left: 2rem;
  }

  .seo-content li {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .cta-section {
    padding-top: 3rem;
    padding-bottom: 2rem;
  }

  .cta-box {
    text-align: center;
    background-color: var(--color-background);
    padding: 3rem;
    border-radius: 12px;
    border: 2px solid var(--color-primary);
  }

  .cta-box h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .cta-box p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2rem;
  }

  .button {
    display: inline-block;
    background-color: var(--color-primary);
    color: var(--color-white);
    padding: 1rem 2rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 700;
    transition: all 0.2s ease;
  }

  .button:hover {
    background-color: var(--color-text);
    transform: translateY(-2px);
  }
  
  .click-prompt {
    display: block;
    margin-top: 1rem;
    font-style: italic;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
</style>