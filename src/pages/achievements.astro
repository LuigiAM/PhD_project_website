---
import Layout from '../layouts/Layout.astro';
import InteractiveTimeline from '../components/InteractiveTimeline.astro'; // <-- IMPORT THE NEW COMPONENT
import ShareButtons from '../components/ShareButtons.astro';

---
<Layout
  title="Achievements & Milestones - MEMOPAD Project"
  description="Explore the key funding, awards, publications, and project milestones for the MEMOPAD PhD project in health technology."
>
  <section class="hero-banner">
    <img src="/achievements-hero-banner.jpg" alt="A desk with charts and graphs, representing project progress and achievements." />
  </section>

  <section class="container">
    <div class="achievements-header">
      <h1>Achievements & Milestones</h1>
      <p>A timeline of the project's key awards, publications, and progress.</p>
      
      {/* REFINED PROMPT TEXT */}
      <small class="click-prompt">(Click the 3 categories or swipe to explore)</small>
    </div>

    {/* --- RENDER THE NEW INTERACTIVE COMPONENT --- */}
    <InteractiveTimeline />
    
    <ShareButtons pageTitle="MEMOPAD Project Achievements" />
  </section>
</Layout>

<style>
  .hero-banner {
    width: 100%;
    height: 350px;
    margin-bottom: 0;
  }
  .hero-banner img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .achievements-header {
    text-align: center;
    padding-top: 4rem;
    margin-bottom: 2rem;
  }
  .achievements-header h1 {
    font-size: 3rem;
  }
  .achievements-header p {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0.5rem auto 0;
  }
  
  /* ADDED STYLE FOR THE PROMPT */
  .click-prompt {
    display: block;
    margin-top: 1rem;
    font-style: italic;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }
</style>
