---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const {
  title = "MEMoPAD: Multimodal Emotion Monitoring for Anxiety Disorders",
  description = "A PhD project exploring how co-designed emotion recognition technology can benefit mental health."
} = Astro.props;

// Construct full URL for Open Graph
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const ogImageURL = new URL('/og-image.jpg', Astro.site); // You'll need to create this
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  
  <!-- Preconnect to Google Fonts for performance -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={canonicalURL} />

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={canonicalURL} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImageURL} />
  <meta property="og:site_name" content="MEMoPAD Project" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={canonicalURL} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImageURL} />
  <meta name="twitter:creator" content="@LuigiAndreaM" />

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Person",
        "name": "Luigi A. Moretti",
        "url": "https://memopad.luigiandreamoretti.com/contact/",
        "sameAs": [
          "https://www.linkedin.com/in/luigiandreamoretti/",
          "https://www.researchgate.net/profile/Luigi-Moretti-2"
        ],
        "affiliation": {
          "@type": "Organization",
          "name": "UWE Bristol"
        }
      },
      {
        "@type": "ResearchProject",
        "name": "MEMoPAD: Multimodal Emotional Monitoring in Clinical Pathways for Anxiety Disorders",
        "url": "https://memopad.luigiandreamoretti.com/",
        "description": "PhD research using wearable devices for anxiety disorder emotion monitoring",
        "keywords": ["anxiety disorders", "wearable devices", "affective computing", "emotion recognition", "mental health technology"],
        "founder": {
          "@type": "Person",
          "name": "Luigi A. Moretti"
        },
        "sponsor": {
          "@type": "Organization",
          "name": "UWE Bristol"
        },
        "award": ["NHS BNSSG ICB Grant", "CATE Student Internship", "Best Student Poster Award"],
        "status": "Active"
      }
    ]
  }
  </script>
</head>
<body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
</body>
</html>