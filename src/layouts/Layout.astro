---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Get the title and description passed from each page.
// Provide default values in case a page doesn't specify them.
const {
  title = "MEMOPAD: Multimodal Emotion Monitoring for Anxiety Disorders",
  description = "A PhD project exploring how co-designed emotion recognition technology can benefit mental health."
} = Astro.props;
---
<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  
  {/* --- These tags are dynamic --- */}
  <title>{title}</title>
  <meta name="description" content={description} />

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Person",
        "name": "Luigi A. Moretti",
        "url": "https://luigiam.github.io/PhD_project_website/contact/",
        "sameAs": [
          "https://www.linkedin.com/in/luigiandreamoretti/",
          "https://www.researchgate.net/profile/Luigi-Moretti-2"
        ],
        "affiliation": {
          "@type": "Organization",
          "name": "UWE Bristol"
        }
      },
      {
        "@type": "Project",
        "name": "MEMOPAD: Multimodal Emotional Monitoring in Clinical Pathways for Anxiety Disorders",
        "url": "https://luigiam.github.io/PhD_project_website/",
        "description": "A PhD project exploring how co-designed emotion recognition technology can benefit mental health pathways for anxiety disorders.",
        "founder": {
          "@type": "Person",
          "name": "Luigi A. Moretti"
        }
      }
    ]
  }
  </script>
    
</head>
<body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
</body>
</html>
